<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yun.dao.mapper.SkillMapper">
    <resultMap id="BaseResultMap" type="com.yun.beans.entity.Skill">
        <id column="skill_id" jdbcType="INTEGER" property="skillId"/>
        <result column="resume_id" jdbcType="INTEGER" property="resumeId"/>
        <result column="skill_name" jdbcType="VARCHAR" property="skillName"/>
        <result column="skill_desc" jdbcType="VARCHAR" property="skillDesc"/>
        <result column="status" jdbcType="INTEGER" property="status"/>
        <result column="other1" jdbcType="VARCHAR" property="other1"/>
        <result column="other2" jdbcType="VARCHAR" property="other2"/>
    </resultMap>
    <resultMap id="SkillVo" type="com.yun.beans.vo.SkillVo">
        <result column="resume_name" jdbcType="VARCHAR" property="resumeName"/>
        <result column="cust_id" jdbcType="INTEGER" property="custId"/>
        <result column="skill_id" jdbcType="INTEGER" property="skillId"/>
        <result column="resume_id" jdbcType="INTEGER" property="resumeId"/>
        <result column="skill_name" jdbcType="VARCHAR" property="skillName"/>
        <result column="skill_desc" jdbcType="VARCHAR" property="skillDesc"/>
    </resultMap>
    <select id="showAllSkill" resultMap="SkillVo">
        SELECT r.resume_id,
               r.resume_name,
               r.cust_id,
               s.skill_id,
               s.skill_name,
               s.skill_desc
        from resume r
                 INNER JOIN skill s
                            on r.resume_id = s.resume_id
        where r.cust_id = #{custId}
          and r.status = 1
    </select>
</mapper>